DROP TABLE "BANK_USER_INFO";

CREATE TABLE "BANK_USER_INFO" (
	"USER_ID"	VARCHAR2(255)		NOT NULL,
	"EMAIL"	VARCHAR2(255)		NOT NULL,
	"PASSWORD"	VARCHAR2(255)		NULL,
	"NAME"	VARCHAR2(255)		NULL,
	"BIRTH_DATE"	DATE		NULL,
	"PHONE_NUMBER"	VARCHAR2(20)		NULL,
	"ADDR"	VARCHAR2(255)		NULL,
	"ACCOUNT_LINK"	VARCHAR2(255)		NULL,
	"ADMIN_RIGHT"	NUMBER(1)		NULL
);

DROP TABLE "SAVING_ACCOUNT";

CREATE TABLE "SAVING_ACCOUNT" (
	"AC_NUMBER"	NUMBER(20)		NOT NULL,
	"BANK_CD"	VARCHAR2(255)		NULL,
	"USER_ID"	VARCHAR2(255)		NOT NULL,
	"AC_PW"	NUMBER(4)		NULL,
	"AC_NAME"	VARCHAR2(255)		NULL,
	"BALANCE"	NUMBER(20)		NULL,
	"RATE"	NUMBER(5)		NULL,
	"AC_OP_DATE"	TIMESTAMP DEFAULT CURRENT_TIMESTAMP		NULL,
	"USER_MEMO"	VARCHAR2(30)		NULL,
	"STATE"	NUMBER(1)		NULL
);

DROP TABLE "DEPOSIT_ACCOUNT";

CREATE TABLE "DEPOSIT_ACCOUNT" (
	"AC_NUMBER"	NUMBER(20)		NOT NULL,
	"BANK_CD"	VARCHAR2(255)		NULL,
	"USER_ID"	VARCHAR2(255)		NOT NULL,
	"AC_PW"	NUMBER(4)		NULL,
	"AC_NAME"	VARCHAR2(255)		NULL,
	"BALANCE"	NUMBER(20)		NULL,
	"RATE"	NUMBER(5)		NULL,
	"AC_OP_DATE"	TIMESTAMP DEFAULT CURRENT_TIMESTAMP		NULL,
	"AC_ED_DATE"	DATE		NULL,
	"USER_MEMO"	VARCHAR2(30)		NULL
);

DROP TABLE "QUERY_BOARD";

CREATE TABLE "QUERY_BOARD" (
	"POST_ID"	NUMBER(20)		NOT NULL,
	"USER_ID"	VARCHAR2(255)		NOT NULL,
	"TITLE"	VARCHAR2(255)		NULL,
	"CONTENTS"	VARCHAR2(4000)		NULL,
	"CREATE_TIME"	TIMESTAMP DEFAULT CURRENT_TIMESTAMP		NULL,
	"IS_NOTICE"	NUMBER(1)		NULL,
	"VIEWS"	NUMBER(20)		NULL
);

DROP TABLE "COMMENT";

CREATE TABLE "COMMENT" (
	"COMMENT_ID"	NUMBER(20)		NOT NULL,
	"POST_ID"	NUMBER(20)		NOT NULL,
	"USER_ID"	VARCHAR2(255)		NOT NULL,
	"CONTENTS"	VARCHAR2(4000)		NULL,
	"CREATE_TIME"	TIMESTAMP DEFAULT CURRENT_TIMESTAMP		NULL
);

DROP TABLE "COMMENT_REPLY";

CREATE TABLE "COMMENT_REPLY" (
	"COMMENT_REPLY_ID"	NUMBER(20)		NOT NULL,
	"COMMENT_ID"	NUMBER(20)		NOT NULL,
	"USER_ID"	VARCHAR2(255)		NOT NULL,
	"CONTENTS"	VARCHAR2(4000)		NULL,
	"CREATE_TIME"	TIMESTAMP DEFAULT CURRENT_TIMESTAMP		NULL,
	"PARENT_RE_ID"	NUMBER(20)		NULL,
	"DEPTH"	NUMBER(20)		NULL
);

DROP TABLE "FINANCIAL_PRODUCT";

CREATE TABLE "FINANCIAL_PRODUCT" (
	"PD_NUMBER"	NUMBER(20)		NOT NULL,
	"USER_ID"	VARCHAR2(255)		NOT NULL,
	"PD_NAME"	VARCHAR2(255)		NULL,
	"BALANCE"	NUMBER(20)		NULL,
	"AC_OP_DATE"	DATE		NULL
);

DROP TABLE "TRANSACTION_HISTORY";

CREATE TABLE "TRANSACTION_HISTORY" (
	"TR_NUMBER"	NUMBER(20)		NOT NULL,
	"AC_NUMBER"	NUMBER(20)		NOT NULL,
	"TR_AC_NUMBER"	NUMBER(20)		NULL,
	"TR_NAME"	VARCHAR2(255)		NULL,
	"AMOUNT"	NUMBER(20)		NULL,
	"TR_TIME"	TIMESTAMP DEFAULT CURRENT_TIMESTAMP		NULL
);

DROP TABLE "FAVORITE_ACCOUNTS";

CREATE TABLE "FAVORITE_ACCOUNTS" (
	"FA_AC_NUMBER"	NUMBER(20)		NULL,
	"USER_ID"	VARCHAR2(255)		NOT NULL,
	"FA_BANK_CD"	VARCHAR2(255)		NULL,
	"FAVORITE_NAME"	VARCHAR2(255)		NULL
);

ALTER TABLE "BANK_USER_INFO" ADD CONSTRAINT "PK_BANK_USER_INFO" PRIMARY KEY (
	"USER_ID"
);

ALTER TABLE "SAVING_ACCOUNT" ADD CONSTRAINT "PK_SAVING_ACCOUNT" PRIMARY KEY (
	"AC_NUMBER"
);

ALTER TABLE "DEPOSIT_ACCOUNT" ADD CONSTRAINT "PK_DEPOSIT_ACCOUNT" PRIMARY KEY (
	"AC_NUMBER"
);

ALTER TABLE "QUERY_BOARD" ADD CONSTRAINT "PK_QUERY_BOARD" PRIMARY KEY (
	"POST_ID"
);

ALTER TABLE "COMMENT" ADD CONSTRAINT "PK_COMMENT" PRIMARY KEY (
	"COMMENT_ID"
);

ALTER TABLE "COMMENT_REPLY" ADD CONSTRAINT "PK_COMMENT_REPLY" PRIMARY KEY (
	"COMMENT_REPLY_ID"
);

ALTER TABLE "FINANCIAL_PRODUCT" ADD CONSTRAINT "PK_FINANCIAL_PRODUCT" PRIMARY KEY (
	"PD_NUMBER"
);

ALTER TABLE "TRANSACTION_HISTORY" ADD CONSTRAINT "PK_TRANSACTION_HISTORY" PRIMARY KEY (
	"TR_NUMBER"
);

ALTER TABLE "FAVORITE_ACCOUNTS" ADD CONSTRAINT "PK_FAVORITE_ACCOUNTS" PRIMARY KEY (
	"FA_AC_NUMBER"
);
